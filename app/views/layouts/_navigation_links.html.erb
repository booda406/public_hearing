<script>
var mq = window.matchMedia( "(min-width: 768px)" );

// media query event handler
if (matchMedia) {
  mq.addListener(WidthChange);
  WidthChange(mq);
}

// media query change
function WidthChange(mq) {

  if (mq.matches) {
    // window width is at least 768px
      $("#logo").attr("src","<%=asset_path('logo-03.png')%>");
      $("#logo").attr("alt",'');
      $("#logo").css("padding-top","5px");
      $(".navbar-collapse").removeAttr('style');
      $(".navbar-brand").css({"width":"216px","height":"71px","padding":"10px 15px 10px 15px",});
  }
  else {
    // window width is less than 768px
      $("#logo").attr("src"," ");
      $("#logo").attr("alt",'首頁');
      $("#logo").css("padding-top","13px");
      $(".navbar-brand").parent().css("height","40px");
      $(".navbar-brand").css({"width":"150px","height":"40px","padding":"10px 15px 10px 15px",});
      $(".navbar-collapse").attr("style","max-height: 340px; ");
  }

}
</script> 

