<style type="text/css">
  .tag{
    background-color: #0099CC;
  }
</style>
<%= simple_form_for(@hearing_conference) do |f| %>
  <% if @hearing_conference.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@hearing_conference.errors.count, "error") %> prohibited this hearing_conference from being saved:</h2>

      <ul>
      <% @hearing_conference.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    公聽會名稱：<%= f.text_field :title %>
  </div>
  <div class="field">
    日期：<%= f.date_select :happen_date %>
  </div>
  <div class="field">
    <%= f.input :photo %>
  </div>
  <div class="field">
    <%= f.input :category_id, collection: Category.all, prompt: "請選擇一個種類", :class => "collect" %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :wiki %><br>
    <%= f.text_area :wiki %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.input :event %>
  </div>
  <div class="field">
    相關法：<%= f.text_field :law %>
  </div>
  <div class="field">
    主席：<%= f.text_field :president %>
  </div>
  <div class="field">
    主辦單位：<%= f.text_field :organizer %>
  </div>
  <div class="field">
    <%= f.input :participant %>
  </div>
  <div class="field">
    <%= f.input :topics %>
  </div>
  <%= f.input :tag_list, :input_html => { :id => 'tags_1', :data => { :role => 'tagsinput' }}, :label => "標籤" %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $('#tags_1').tagsinput('item');
  });
</script>