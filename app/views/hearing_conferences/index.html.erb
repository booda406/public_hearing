<h1>台灣公聽會，資訊百老匯</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Happen date</th>
      <th>Location</th>
    </tr>
  </thead>

  <tbody>
    <% @hearing_conferences.each do |hearing_conference| %>
      <tr>
        <td><%= hearing_conference.title %></td>
        <td><%= hearing_conference.happen_date %></td>
        <td><%= hearing_conference.location %></td>
        <td><%= hearing_conference.tag_list %></td>
        <td><%= link_to 'Show', hearing_conference %></td>
        <td><%= link_to 'Edit', edit_hearing_conference_path(hearing_conference) %></td>
        <td><%= link_to 'Destroy', hearing_conference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

