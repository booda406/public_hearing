                   <%=image_tag(hearingconference.photo, class: "img-responsive img-thumbnail")%>
                  <p class="follow_user"><%=hearingconference.title%></p>
                </a>
              </div>
               <% end %>
            </div>
          </div>
          <div id="section4" class="background1">
            <h3 class="news"><img src="../assets/eye-03.png" height="70px" width="70px" style="display:inline-block;margin-right:10px"><%=@user.name%>正在關注的軍師</h3>
            <div class="row">
            <% @users.each do |user| %>
              <div class="col-md-2 col-xs-3 follow_hover">
                <a href="<%=user_page_path(user.id)%>">
                  <%= image_tag(user.image+"?type=normal") %>
                  <p class="follow_user"><%= user.name %></p>
               </a>
              </div>
