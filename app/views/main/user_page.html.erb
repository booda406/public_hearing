<style type="text/css">
  @import url(http://fonts.googleapis.com/css?family=Droid+Sans+Mono);

html,body {
  height: 100%;
  font-family: "新細明體",'Times New Roman', sans-serif;
}

p,h1,h2,h3,h4 {
  font-family: "新細明體",'Times New Roman', sans-serif;
}

hr {
  border-color:#191919;
}

/* wrapper for page content to push down footer */
.page-container {
  min-height: 100%;
  height: auto !important;
  height: 100%;
  padding-bottom: 80px;
}

body {
  padding-top: 75px; 
  color: #f9f9f9;
}
.text-center {
  padding-top: 20px;
}
.white{
  color: #ffffff;
}
a.list-group-item{
  min-height: 60px;
  font-size: 20px;
  color: #000000;
  border: none;
}
a.list-group-item:hover, a.list-group-item:focus{
  opacity: 1;
  background-color: #4D4D4D;
  color: #FFFFFF;
}
#sidebar {
  height: 100%;
  padding-right: 0;
  padding-top: 20px;
}

#sidebar .affix {
  position:fixed;
  top:55;
  width:20%;
}

#sidebar .affix-bottom {
  position:fixed;
  top:55;
  width:220px;
}

#sidebar .nav {
  width: 95%;
}
#sidebar li {
  border:0 #1e1e1e solid;
}
#sidebar li a {
  font-size: 16px;
  text-align: center;
  color: black;
  line-height: 25px;
}
#sidebar li a:hover {
  opacity: 1;
  background-color:#A4C5C2;
  color: #ffffff;
}
#sidebar li a b{
  text-align: center;
  font-size: 20px;
  letter-spacing: 5px;
}
#follow{
  height: 60px;
  font-size: 25px;
  text-align: center;
  line-height: 60px;
  margin-bottom: 10px;
}
/* collapsed sidebar styles */
@media screen and (max-width: 767px) {
  .row-offcanvas {
    position: relative;
    -webkit-transition: all 0.25s ease-out;
    -moz-transition: all 0.25s ease-out;
    transition: all 0.25s ease-out;
  }
  .row-offcanvas-right
  .sidebar-offcanvas {
    right: -41.6%;
  }

  .row-offcanvas-left
  .sidebar-offcanvas {
    left: -41.6%;
  }
  .row-offcanvas-right.active {
    right: 41.6%;
  }
  .row-offcanvas-left.active {
    left: 41.6%;
  }
  .sidebar-offcanvas {
    position: absolute;
    top: 0;
    width: 41.6%;
  }
  #sidebar {
    background-color:#3b3b3b;
    padding-top:0;
  }
  #sidebar .nav>li {
    color: #ddd;
    background: linear-gradient(#3E3E3E, #383838);
    border-top: 1px solid #484848;
    border-bottom: 1px solid #2E2E2E;
    padding-left:10px;
  }
  #sidebar .nav>li:first-child {
    border-top:0;
  }
  #sidebar .nav>li>a {
    color: #ddd;
  }
  #sidebar .nav>li>a>img {
    max-width: 14px;
  }
  #sidebar .nav>li>a:hover, #sidebar .nav>li>a:focus {
    text-decoration: none;
    background: linear-gradient(#373737, #323232);
    color: #fff;  
  }
  #sidebar .nav .caret {
    border-top-color: #fff;
    border-bottom-color: #fff;
  }
  #sidebar .nav a:hover .caret{
    border-top-color: #fff;
    border-bottom-color: #fff;
  }
}

/* theme */
.btn,.form-control,.alert,.progress,.panel,.list-group,.well,.list-group-item:first-child {border-radius:1px;box-shadow:0 0 0;}
.btn {border-color:transparent;}
.btn-default,.well {
  background-color:#cccccc;
  border-color:#c0c0c0;
}
.btn-primary,.label-primary,.list-group-item.active,.list-group-item.active:hover,.list-group-item.active:focus,.btn.active,a.list-group-item.active, a.list-group-item.active:hover, a.list-group-item.active:focus {
   background-color:#0099CC;
   border-color:transparent;
}
.btn-info,.label-info,.progress-bar-info {
  background-color:#33b5e5;
}
.btn-success,.label-success,.progress-bar-success {
  background-color:#669900;
}
.btn-danger,.label-danger,.progress-bar-danger {
  background-color:#FF4444;
}
.btn-warning,.label-warning,.progress-bar-warning {
  background-color:#FFBB33;
  color:#444444;
}
.nav-tabs>li>a {
  border-radius:0;
}
.panel{
  background-color: #A4C5C2;
}    
h3,h4,h5,.panel {
   color:#555555;
}
.panel hr {
   border-color:#efefef;
}
.news{
    border-top-left-radius: 3px;
    border-top-right-radius: 3px;
    padding: 10px 15px;  
    color: black;
}
.news_message{
  font-size: 25px;
  line-height: 1;
  margin: 5px 5px;
}
.background1{
  background-color: #A4C5C2;
}
.background2{
  background-color: #4D4D4D;
}
.row{
  margin:0;
}
#follow a{
  background-color: #A4C5C2;
}
.follow{
  height: 57px;
  color: white;
  font-size: 25px;
  letter-spacing: 5px;
  font-weight: bold;
  width: 100%;
}
.follow_user{
  text-align:center;
  color:black;
  font-size: 20px;
}
.post{
 text-align: center; 
 font-size: 20px;
 background-color: white;
 color: #000;
 font-weight: bold;
 min-height: 45px;
 line-height: 45px;
}
.post a{
  color: #000;
}
.post:hover{
  background-color: #4D4D4D;
  color:white;
}
.post:hover a{
  background-color: transparent;
  color: white;
}
.left-line{
  border-left:thick groove #000000;
}
.follow_hover:hover a p{
  background-color: #4D4D4D;
  color: #ffffff;
}
</style>
<div class="page-container">
    <div class="container-fluid">
      <div class="row row-offcanvas row-offcanvas-left">
        
        <!--sidebar-->
        <div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar" role="navigation">
          <div data-spy="affix" data-offset-top="45" data-offset-bottom="90">
            <ul class="nav" id="sidebar-nav">
              <li><%= image_tag(@user.image+"?type=large", style: "height:160px;width:160px;margin-bottom:10px") %></li>
              <li class="background1" id="follow"><strong class="white"><%=@user.name%></strong><b class="white">軍師的個人檔案</b></li>
              <li><a href="#"><b>新通知</b></a></li>
              <li><a href="#section1"><b>個人戰帖記錄</b></a></li>
              <li><a href="#section3"><b>追蹤清單</b></a></li>
            </ul>
           </div>
        </div><!--/sidebar-->
    
        <!--/main-->
        <div class="col-xs-12 col-sm-9 left-line" data-spy="scroll" data-target="#sidebar-nav">
          <div class="row">
             <div class="col-sm-6">
                <div class="panel panel-default">
                  <div class="background1"><h3 class="news"><img src="../assets/newmessage-01.png" height="50px" width="50px" style="display:inline-block;margin-right:20px"><%=@user.name%>關注的軍師發戰帖了</h3></div>
                    <div class="panel-body">
                      <div class="list-group">
                        <a href="#" class="list-group-item background1"><%=image_tag(User.find(1).image, :style => "display:inline-block;float:left;padding-right:25px")%><p class="news_message"><%=User.find(1).name%>軍師發了新的戰帖</p></a>
                        <a href="#" class="list-group-item background1">Second item</a>
                        <a href="#" class="list-group-item background1">Third item</a>
                        <a href="#" class="list-group-item background1">Another item</a>
                        <a href="#" class="list-group-item background1">Another item</a>
                      </div>
                    </div><!--/panel-body-->
                </div><!--/panel-->
            </div><!--/col-->
            <div class="col-sm-6">
                <div class="panel panel-default">
                  <div class="background1"><h3 class="news"><img src="../assets/newmessage-01.png" height="50px" width="50px" style="display:inline-block;margin-right:20px"><%=@user.name%>關注的公聽會要開戰了</h3></div>
                    <div class="panel-body">
                      <div class="list-group">
                        <a href="#" class="list-group-item background1"><%=image_tag(HearingConference.find(1).photo.show, :style => "display:inline-block;float:left;padding-right:25px;height:50px;width:80px;")%><p class="news_message"><%=HearingConference.find(1).title%></p></a>
                        <a href="#" class="list-group-item background1">Second item</a>
                        <a href="#" class="list-group-item background1">Third item</a>
                        <a href="#" class="list-group-item background1">Another item</a>
                        <a href="#" class="list-group-item background1">Another item</a>
                      </div>
                    </div><!--/panel-body-->
                </div><!--/panel-->
            </div><!--/col-->
          </div><!--/row-->
          
          <div id="section1" class="background1">
            <h3 class="news"><img src="../assets/newmessage-01.png" height="70px" width="70px" style="display:inline-block;margin-right:10px"><%=@user.name%>關注的公聽會有新的戰況</h3>
            <div class="panel-body background1">
              <div class="list-group">
                <a href="#" class="list-group-item background1"><%=image_tag(HearingConference.find(2).photo.show, :style => "display:inline-block;float:left;padding-right:25px;height:50px;width:80px;")%><p class="news_message"><%=HearingConference.find(2).title%></p></a>
