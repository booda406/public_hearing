<% if (!current_user.following?(@user) && current_user.id != @user.id) %><span><%= button_to "Follow", { action: "follow", id: current_user.id, user_id: @user.id } %></span><% end %>
<%= @user.name %><br>

<div class="row">
<% @hearingconferences.each do |hearingconference| %>
  <div class="col-xs-10 col-sm-5 col-sm-offset-1 col-md-3 col-lg-3 pin_space">
	<h2 class="text-center"><%= link_to hearingconference.title, hearingconference %></h2>
	<%= link_to image_tag(hearingconference.photo, class: "img-responsive img-thumbnail"), hearingconference %>
  </div>
<% end %>
</div>

<div class="row">
    <% @posts.each do |post| %>
  <div class="col-xs-10 col-sm-5 col-sm-offset-1 col-md-3 col-lg-3 pin_space">
        <h2 class="text-center"><%= link_to post.title, post %></h2>
        <%= link_to image_tag(post.cover_photo, class: "img-responsive img-thumbnail"), post, :class => "" %>
        <div class="btn btn-info"><%= link_to post.hearing_conference.title, hearing_conference_path(post.hearing_conference_id) %></div>

  </div>
    <% end %>
</div>

<% @users.each do |user| %>
	<%= link_to user.name, user_page_path(user.id) %>
<% end %>
