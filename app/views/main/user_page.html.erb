          </div>
        </div><!--/.col-xs-12-->
      </div><!--/.row-->
  </div><!--/.container-->
</div><!--/.page-container-->
<script type="text/javascript">
  $('[data-toggle=offcanvas]').click(function() {
    $('.row-offcanvas').toggleClass('active');
  });

  $('.btn-toggle').click(function() {
    $(this).find('.btn').toggleClass('active').toggleClass('btn-default').toggleClass('btn-primary');
  });

  $('#follow').hover(function(){
    <% if (current_user) %>
      <% if (!current_user.following?(@user) && current_user.id != @user.id) %>
      $('#follow').html('<%=button_to "關注此軍師", { action: "follow", id: current_user.id, user_id: @user.id }, class: "background1 follow"%>');
      <% elsif (current_user.following?(@user) && current_user.id != @user.id) %>
      $('#follow').html('<%=button_to "已經關注此軍師", { action: "unfollow", id:current_user.id, user_id: @user.id }, class: "background2 follow"%>');
      <% end %>
    <% else %>
      $('#follow').html('<b class="white">請先登入才能關注</b>');
    <% end %>
  },function(){
    $('#follow').html('<strong class="white"><%=@user.name%></strong><b class="white">軍師的個人檔案</b>');
  });
</script>