          <div id="section2" class="background1">
            <h3 class="news"><img src="../assets/write-02.png" height="70px" width="70px" style="display:inline-block;margin-right:10px"><%=@user.name%>撰寫過的戰帖</h3>
            <div class="row">
              <% @posts.each do |post| %>
              <div class="col-md-4">
                <p class="post"><%= link_to post.title, post %></p>
              </div>
              <% end %>
            </div>
          </div>
          <div id="section3" class="background1">
            <h3 class="news"><img src="../assets/eye-03.png" height="70px" width="70px" style="display:inline-block;margin-right:10px"><%=@user.name%>正在關注的公聽會戰役</h3>
